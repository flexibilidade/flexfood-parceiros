generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  USER
  ADMIN
  PARTNER
  DELIVERYMAN
}

enum PartnerStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum PartnerAvailability {
  OPEN
  CLOSED
  BUSY
}

enum DeliverymanStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum DeliverymanAvailability {
  AVAILABLE
  BUSY
  OFFLINE
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY_FOR_PICKUP
  PICKED_UP
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  MPESA
  EMOLA
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model User {
  id                    String             @id @default(uuid())
  name                  String
  email                 String
  emailVerified         Boolean            @default(false)
  phone                 String?
  image                 String?
  role                  UserRole           @default(USER)
  bio                   String?            @db.Text
  
  // Localização
  country               String?            @default("Moçambique")
  province              String?
  city                  String?
  
  addresses             Address[]
  orders                Order[]
  reviews               Review[]
  payments              Payment[]
  partner               Partner?
  deliveryman           Deliveryman?
  
  sessions              Session[]
  accounts              Account[]
  
  deletedAt             DateTime?
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  @@unique([email])
  @@index([role])
  @@index([phone])
  @@index([deletedAt])
  @@map("user")
}

model Session {
  id        String   @id @default(uuid())
  expiresAt DateTime
  token     String   @db.VarChar(500)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(uuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?   @db.VarChar(255)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@unique([providerId, accountId])
  @@map("account")
}

model Verification {
  id         String    @id @default(uuid())
  identifier String
  value      String    @db.Text
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("verification")
}

// ENUMS and MODELS for the System

model Address {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  label       String?  // "Casa", "Trabalho", etc
  street      String   @db.Text
  apartment   String?
  postalCode  String?
  city        String
  province    String
  country     String   @default("Moçambique")
  
  // Coordenadas para cálculo de distância
  latitude    Float?
  longitude   Float?
  
  isDefault   Boolean  @default(false)
  
  orders      Order[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("address")
}

model Partner {
  id                    String                @id @default(uuid())
  userId                String                @unique
  user                  User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name                  String
  description           String?               @db.Text
  phone                 String
  
  // Informações do proprietário
  ownerName             String
  ownerEmail            String
  ownerPhone            String
  
  // Localização
  address               String                @db.Text
  city                  String
  province              String
  country               String                @default("Moçambique")
  latitude              Float?
  longitude             Float?
  isLocationSet         Boolean               @default(false)
  
  // Mídia
  photo                 String?               @db.Text
  banner                String?               @db.Text
  
  // Status e disponibilidade
  status                PartnerStatus         @default(PENDING)
  availability          PartnerAvailability   @default(CLOSED)
  
  // Financeiro
  balance               Float                 @default(0)
  commissionRate        Float                 @default(15) // Percentual de comissão
  
  // Horários de funcionamento (JSON)
  businessHours         String?               @db.Text
  
  menuCategories        MenuCategory[]
  products              Product[]
  orders                Order[]
  reviews               Review[]
  
  deletedAt             DateTime?
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt

  @@index([userId])
  @@index([status])
  @@index([availability])
  @@index([city])
  @@index([province])
  @@index([deletedAt])
  @@map("partner")
}

model MenuCategory {
  id                    String    @id @default(uuid())
  partnerId             String
  partner               Partner   @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  
  name                  String
  isAvailable           Boolean   @default(true)
  displayOrder          Int       @default(0)
  
  products              Product[]
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([partnerId])
  @@index([isAvailable])
  @@map("menu_category")
}

model Product {
  id                    String        @id @default(uuid())
  partnerId             String
  partner               Partner       @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  
  menuCategoryId        String
  menuCategory          MenuCategory  @relation(fields: [menuCategoryId], references: [id], onDelete: Cascade)
  
  name                  String
  description           String        @db.Text
  price                 Float
  photo                 String?       @db.Text
  
  preparationTime       Int           // Em minutos
  isAvailable           Boolean       @default(true)
  
  // Estatísticas
  salesCount            Int           @default(0)
  
  orderItems            OrderItem[]
  
  deletedAt             DateTime?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  @@index([partnerId])
  @@index([menuCategoryId])
  @@index([isAvailable])
  @@index([deletedAt])
  @@map("product")
}

model Deliveryman {
  id                    String                    @id @default(uuid())
  userId                String                    @unique
  user                  User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  phone                 String
  photo                 String?                   @db.Text
  
  // Documentos
  documentNumber        String?                   // BI ou outro documento
  vehicleType           String?                   // "mota", "bicicleta", "carro"
  vehiclePlate          String?
  
  // Localização atual
  currentLatitude       Float?
  currentLongitude      Float?
  
  // Status
  status                DeliverymanStatus         @default(PENDING)
  availability          DeliverymanAvailability   @default(OFFLINE)
  
  // Financeiro
  balance               Float                     @default(0)
  
  // Estatísticas
  totalDeliveries       Int                       @default(0)
  rating                Float?
  
  orders                Order[]
  reviews               Review[]
  withdrawals           Withdrawal[]
  
  deletedAt             DateTime?
  createdAt             DateTime                  @default(now())
  updatedAt             DateTime                  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([availability])
  @@index([deletedAt])
  @@map("deliveryman")
}

model Order {
  id                    String          @id @default(uuid())
  orderNumber           String          @unique // Número visível para o usuário
  
  userId                String
  user                  User            @relation(fields: [userId], references: [id])
  
  partnerId             String
  partner               Partner         @relation(fields: [partnerId], references: [id])
  
  deliverymanId         String?
  deliveryman           Deliveryman?    @relation(fields: [deliverymanId], references: [id])
  
  addressId             String
  address               Address         @relation(fields: [addressId], references: [id])
  
  // Status
  status                OrderStatus     @default(PENDING)
  
  // Valores
  subtotal              Float           // Soma dos itens
  deliveryFee           Float
  discount              Float           @default(0)
  total                 Float
  
  // Pagamento
  paymentMethod         PaymentMethod
  paymentStatus         PaymentStatus   @default(PENDING)
  
  // Tempos
  estimatedPreparationTime Int?         // Em minutos
  estimatedDeliveryTime    DateTime?
  
  confirmedAt           DateTime?
  readyAt               DateTime?
  pickedUpAt            DateTime?
  deliveredAt           DateTime?
  cancelledAt           DateTime?
  
  // Observações
  notes                 String?         @db.Text
  cancellationReason    String?         @db.Text
  
  orderItems            OrderItem[]
  payment               Payment?
  review                Review?
  
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  @@index([userId])
  @@index([partnerId])
  @@index([deliverymanId])
  @@index([status])
  @@index([createdAt])
  @@map("order")
}

model OrderItem {
  id                    String    @id @default(uuid())
  orderId               String
  order                 Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId             String
  product               Product   @relation(fields: [productId], references: [id])
  
  quantity              Int
  unitPrice             Float
  totalPrice            Float
  
  notes                 String?   @db.Text // Observações do item
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([orderId])
  @@index([productId])
  @@map("order_item")
}

model Payment {
  id                    String          @id @default(uuid())
  orderId               String          @unique
  order                 Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  userId                String
  user                  User            @relation(fields: [userId], references: [id])
  
  amount                Float
  method                PaymentMethod
  status                PaymentStatus   @default(PENDING)
  
  // Detalhes do pagamento
  transactionId         String?         // ID da transação externa (M-Pesa, etc)
  phoneNumber           String?         // Para pagamentos móveis
  
  paidAt                DateTime?
  
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  @@index([userId])
  @@index([status])
  @@map("payment")
}

model Review {
  id                    String       @id @default(uuid())
  orderId               String       @unique
  order                 Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  userId                String
  user                  User         @relation(fields: [userId], references: [id])
  
  partnerId             String?
  partner               Partner?     @relation(fields: [partnerId], references: [id])
  
  deliverymanId         String?
  deliveryman           Deliveryman? @relation(fields: [deliverymanId], references: [id])
  
  // Avaliações
  partnerRating         Int?         // 1-5
  deliverymanRating     Int?         // 1-5
  
  comment               String?      @db.Text
  
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  @@index([userId])
  @@index([partnerId])
  @@index([deliverymanId])
  @@map("review")
}

model Withdrawal {
  id                    String      @id @default(uuid())
  deliverymanId         String
  deliveryman           Deliveryman @relation(fields: [deliverymanId], references: [id])
  
  amount                Float
  method                String      // "bank_transfer", "mpesa", etc
  accountDetails        String      @db.Text // JSON com detalhes da conta
  
  status                String      @default("pending") // pending, completed, rejected
  
  requestedAt           DateTime    @default(now())
  processedAt           DateTime?
  
  notes                 String?     @db.Text
  
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  @@index([deliverymanId])
  @@index([status])
  @@map("withdrawal")
}
